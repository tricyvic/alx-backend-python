#!/bin/bash

# kurbeScript - Start and verify a Kubernetes cluster with minikube

set -e

echo "ğŸ” Checking if minikube is installed..."
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it first:"
    echo "ğŸ‘‰ https://minikube.sigs.k8s.io/docs/start/"
    exit 1
else
    echo "âœ… Minikube is installed."
fi

echo "ğŸš€ Starting Kubernetes cluster with minikube..."
minikube start

echo "â³ Verifying Kubernetes cluster status..."
kubectl cluster-info

echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces

echo "ğŸ‰ Kubernetes cluster is up and running!"
